{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "FRONTEND_URL": "https://reqgenai.netlify.app"
  },
  "functions": {
    "app.js": {
      "maxDuration": 30
    }
  }
}
