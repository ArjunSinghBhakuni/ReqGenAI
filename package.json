{
  "name": "reqgenai-monorepo",
  "version": "1.1.0",
  "description": "ReqGenAI - Intelligent Requirement Generation System (Monorepo)",
  "private": true,
  "workspaces": [
    "frontend",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:server": "cd server && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "build": "npm run build:frontend && npm run build:server",
    "build:frontend": "cd frontend && npm run build",
    "build:server": "cd server && npm run build",
    "start": "npm run start:server",
    "start:server": "cd server && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../server && npm install",
    "clean": "rm -rf node_modules frontend/node_modules server/node_modules frontend/build",
    "test": "echo \"Tests not configured yet\" && exit 0"
  },
  "keywords": [
    "requirements",
    "ai",
    "react",
    "express",
    "mongodb",
    "monorepo"
  ],
  "author": "ReqGenAI Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
